// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @default(autoincrement()) @id
  email     String   @unique
  name      String? 
}

model Section {
  id        Int      @default(autoincrement()) @id
  order      Int @unique
  title     String
  content   String
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    Int
 
}

model Book {
  id        Int      @default(autoincrement()) @id
  title     String
  author    String
  sections  Section[]
}
